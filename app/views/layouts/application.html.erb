<!DOCTYPE html>
<html>
  <head>
    <title>Burning Airlines</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="login-bar">
    <% if @current_user.present? %>
          Logged in as <%= @current_user.name %>
          <% if @current_user.admin? %>
          (admin)
          <%= link_to "New Airplane", new_airplane_path, :class => "mdl-button" %>
          <%= link_to "New Flight", new_flight_path, :class => "mdl-button" %>
          <% end %>
          <%= link_to "Logout", login_path, method: 'delete', :class => "mdl-button" %>
          <% else %>
          <%= link_to "Login", login_path, :class => "mdl-button"  %>
          <%= link_to 'Sign Up', new_user_path, :class => "mdl-button" %>
          <% end %>
          </div>
    <%= yield %>

  </body>
</html>
